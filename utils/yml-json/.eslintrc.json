{
  "env": {
    "browser": true,
    "commonjs": true,
    "es6": true,
    "jest": true
  },
  "extends": "airbnb-base",
  "globals": {
    "Atomics": "readonly",
    "SharedArrayBuffer": "readonly"
  },
  "parserOptions": {
    "ecmaVersion": 2018
  },
  "rules": {
    "arrow-body-style": "off",
    "arrow-parens": ["error", "as-needed"],
    "semi": ["error", "never"],
    "comma-dangle": ["error", "always-multiline"]
  }
}
